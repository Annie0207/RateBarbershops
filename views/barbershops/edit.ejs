<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align:center">Edit <%= barbershop.name %></h1>
        <div style="width: 30%; margin:25px auto;">
            <!--the PUT method should override the POST-->
            <form action="/barbershops/<%= barbershop._id %>?_method=PUT" method="POST">
                <div class="form-group">
					<label for="name">Name</label>
                    <input class="form-control" type="text" name="barbershop[name]" value="<%= barbershop.name %>">
                </div>
                <div class="form-group">
					<label for="price">Price</label>
                    <input class="form-control" type="number" name="barbershop[price]" value="<%= barbershop.price %>" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
					<label for="image">Image Url</label>
                    <input class="form-control" type="text" name="barbershop[image]" value="<%= barbershop.image %>">
                </div>
				<div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="barbershop[location]" value="<%= barbershop.location %>">
                </div>
                <div class="form-group">
					<label for="description">Description</label>
                    <input class="form-control" type="text" name="barbershop[description]" value="<%= barbershop.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/barbershops">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>